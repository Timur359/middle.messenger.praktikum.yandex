<div class="chat-card">
  <div class="chat-card__photo">
    <div class="icon-no-photo"></div>
  </div>
  <div class="chat-card__info">
    <div class="d-flex alignItems-baseline justifyContent-spaceBetween">
      <div class="chat-card__contact-name">{{name}}</div>
      <div class="chat-card__last-message-time">{{time}}</div>
    </div>
    <div class="chat-card__last-message-text">{{#each this.messages}}{{#if
          @last
        }}{{this.content}}{{/if}}{{/each}}</div>
    {{#if messagesCount}}
      <div class="chat-card__new-messages-count">{{messagesCount}}</div>
    {{/if}}
  </div>
</div>